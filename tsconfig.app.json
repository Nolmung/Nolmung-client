{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@common/*": ["./src/common/*"],
      "@mocks/*": ["./src/mocks/*"],
      "@pages/*": ["./src/pages/*"],
      "@service/*": ["./src/service/*"],
      "@styles/*": ["./src/styles/*"],
      "@stores/*": ["./src/stores/*"]
    },
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false, // 파일을 내보내야 참조가 동작
    "jsx": "react-jsx",

    /* 프로젝트 참조를 위한 필수 설정 */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist/app"
  },
  "include": ["src/**/*", "src/global.d.ts"]
}
